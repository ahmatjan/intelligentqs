<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name></display-name>	
   <filter>
  		<filter-name>char</filter-name>
  		<filter-class>cn.com.flters.CharSetFilter</filter-class>
  </filter>
  
  <filter-mapping>
  		<filter-name>char</filter-name>
  		<url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>cn.com.servlets.user.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>AskQuestionServlet</servlet-name>
    <servlet-class>cn.com.servlets.question.AskQuestionServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GetAllTagsInfoServlet</servlet-name>
    <servlet-class>cn.com.servlets.tags.GetAllTagsInfoServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GetHotAnswerServlet</servlet-name>
    <servlet-class>cn.com.servlets.answer.GetHotAnswersInfoServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GetCountOfTagsServlet</servlet-name>
    <servlet-class>cn.com.servlets.tags.GetCountOfTagsServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddTagInfoServlet</servlet-name>
    <servlet-class>cn.com.servlets.tags.AddTagInfoServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddAnswerInfoServlet</servlet-name>
    <servlet-class>cn.com.servlets.answer.AddAnswerInfoServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DleteAnswerServlet</servlet-name>
    <servlet-class>cn.com.servlets.answer.DleteAnswerServlet</servlet-class>
  </servlet>



<servlet-mapping>
    <servlet-name>GetAllTagsInfoServlet</servlet-name>
    <url-pattern>/getAllTagsInfo</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GetHotAnswerServlet</servlet-name>
    <url-pattern>/getHotAnswersInfo</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GetCountOfTagsServlet</servlet-name>
    <url-pattern>/getCountOfTags</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddTagInfoServlet</servlet-name>
    <url-pattern>/addTagInfo</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddAnswerInfoServlet</servlet-name>
    <url-pattern>/addAnswerInfo</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DleteAnswerServlet</servlet-name>
    <url-pattern>/deleteAnswer</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/loginServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AskQuestionServlet</servlet-name>
    <url-pattern>/askQuestionServlet</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
